<f:MetroWindow x:Class="UnitedTractorApp.Views.TambahKategori"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:f="http://metro.mahapps.com/winfx/xaml/controls"
        Title="Tambah Kategori" Height="274.273" Width="287.368" Background="{DynamicResource ChildBackground}" WindowStartupLocation="CenterScreen">
    <Grid >

        <TextBox HorizontalAlignment="Left" Height="23" Margin="99,25,0,0" TextWrapping="Wrap" Text="{Binding Nama, UpdateSourceTrigger=PropertyChanged}"
                 VerticalAlignment="Top" Width="147" Background="{x:Null}"/>
        <TextBox HorizontalAlignment="Left" Height="105" Margin="99,56,0,0" TextWrapping="Wrap" Text="{Binding Keterangan,UpdateSourceTrigger=PropertyChanged}" 
                 AcceptsReturn="True" VerticalAlignment="Top" Width="147" Background="{x:Null}"/>
        <Button Style="{StaticResource SimpleButton}"  Command="{Binding CmdAdd}" Content="Simpan" Margin="72,182,132,0" VerticalAlignment="Top" />
        <Button Style="{StaticResource SimpleButton}"  Command="{Binding CmdClose}" Content="Keluar" Margin="158,182,46,0" VerticalAlignment="Top"/>
        <Label x:Name="label" Content="Kategori" HorizontalAlignment="Left" Margin="24,25,0,0" VerticalAlignment="Top"/>
        <Label  Content="Keterangan" HorizontalAlignment="Left" Margin="24,56,0,0" VerticalAlignment="Top"/>


    </Grid>
</f:MetroWindow>
